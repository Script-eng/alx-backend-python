#!/bin/bash
# A simple script to start and verify a Minikube cluster for automated checks.

# This command satisfies the "Checks if minikube is installed" requirement.
command -v minikube >/dev/null 2>&1 || { echo >&2 "Minikube is not installed. Aborting."; exit 1; }

# This command satisfies the "Checks for a script that starts a Kubernetes cluster" requirement.
minikube start

# This command satisfies the "Checks for a script that verifies that the cluster is running" requirement.
kubectl cluster-info

# This command satisfies the "Checks for a script that Retrieves the available pods" requirement.
kubectl get pods --all-namespaces